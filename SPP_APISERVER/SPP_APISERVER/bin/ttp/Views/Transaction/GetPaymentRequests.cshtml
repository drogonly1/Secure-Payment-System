@model IEnumerable<SPP_APISERVER.Models.PaymentRequest>
@{
    ViewBag.Title = "Payment Request";
    Layout = "~/Views/Shared/Transaction.cshtml";
}
<div class="row">
    <div class="col-10"><h1 class="h3 mb-2 text-gray-800">Danh sách khách hàng đặt vé</h1></div>
</div>
<br />
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Payment ID</th>
                        <th>Buyer Name</th>
                        <th>Amount</th>
                        <th>Response Time</th>
                        <th>Sigature</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.paymentId</td>
                            <td>@i.Buyer.Username</td>
                            <td>@i.amount</td>
                            <td>@i.responseTime</td>
                            <td>@i.signature</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function ConfirmXoa() {
        if (confirm("Bạn có chắc muốn xóa tài khoản này không ?"))
            return true;
        else
            return false;
    }
    FocusEvent = false;
    checked = false;
</script>



